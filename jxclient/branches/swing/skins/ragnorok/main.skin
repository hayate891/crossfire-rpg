tooltip font_tooltip

# Map Group
map playfield

# Stat Group
picture gauge_hp_back         gauge_frame 0.9
textgauge gauge_hp            gauge_hp null gauge_empty HP WE BLACK font_label Hitpoints:

picture gauge_sp_back         gauge_frame 0.9
textgauge gauge_sp            gauge_sp null gauge_empty SP WE BLACK font_label Mana:

picture gauge_gp_back         gauge_frame 0.9
textgauge gauge_gp            gauge_gp gauge_gp_negative gauge_empty GRACE WE BLACK font_label Grace:

picture gauge_fp_back         gauge_frame 0.9
textgauge gauge_fp            gauge_fp null gauge_empty FOOD WE BLACK font_label Food:

picture gauge_xp_back         gauge_xp_frame 0.9
duptextgauge gauge_xp         gauge_xp1 gauge_xp2 gauge_xp_empty EXP_NEXT_LEVEL WE WE BLACK font_label Level:

# Button Group
textbutton button_help        false command_help Help
textbutton button_status      false command_status Status
textbutton button_inventory   false command_inventory Inventory
textbutton button_messages    false command_messages Messages
textbutton button_protections false command_protections Protections
textbutton button_skills      false command_skills Skills
textbutton button_pickup      false command_pickup Pickup
textbutton button_setup       false command_setup Setup

# Hp/Sp/Gr bars in map view
gauge lowfood lowfood  null null LOWFOOD WE

gauge poisoned poisoned null null POISONED WE

picture hpbar_back hpbar_frame 0.9
gauge hpbar hpbar_full null hpbar_empty HP WE

picture spbar_back hpbar_frame 0.9
gauge spbar spbar_full null hpbar_empty SP WE

picture grbar_back hpbar_frame 0.9
gauge grbar grbar_full null hpbar_empty GRACE WE

commandlist_add command_hitpoints_on hpbar_back SHOW
commandlist_add command_hitpoints_on hpbar SHOW
commandlist_add command_hitpoints_on spbar_back SHOW
commandlist_add command_hitpoints_on spbar SHOW
commandlist_add command_hitpoints_on grbar_back SHOW
commandlist_add command_hitpoints_on grbar SHOW
commandlist_add command_hitpoints_off hpbar_back HIDE
commandlist_add command_hitpoints_off hpbar HIDE
commandlist_add command_hitpoints_off spbar_back HIDE
commandlist_add command_hitpoints_off spbar HIDE
commandlist_add command_hitpoints_off grbar_back HIDE
commandlist_add command_hitpoints_off grbar HIDE
commandlist_add command_lowfood_on lowfood SHOW
commandlist_add command_lowfood_off lowfood HIDE
commandlist_add command_poisoned_on poisoned SHOW
commandlist_add command_poisoned_off poisoned HIDE

ignore hpbar_back
ignore hpbar
ignore spbar_back
ignore spbar
ignore grbar_back
ignore grbar
ignore lowfood
ignore poisoned

horizontal begin par
  begin seq
    gap 8
    begin par
      gauge_hp_back
      begin seq
        gap 3
        gauge_hp
        gap 3
      end
    end
    gap 4
    begin par
      gauge_sp_back
      begin seq
        gap 3
        gauge_sp
        gap 3
      end
    end
    gap 4
    begin par
      gauge_gp_back
      begin seq
        gap 3
        gauge_gp
        gap 3
      end
    end
    gap 4
    begin par
      gauge_fp_back
      begin seq
        gap 3
        gauge_fp
        gap 3
      end
    end
    gap 4
    begin par
      gauge_xp_back
      begin seq
        gap 3
        gauge_xp
        gap 3
      end
    end
    gap
    button_help
    gap 4
    button_status
    gap 4
    button_inventory
    gap 4
    button_messages
    gap 4
    button_protections
    gap 4
    button_skills
    gap 4
    button_pickup
    gap 4
    button_setup
    gap 8
  end
  begin seq
    gap 0 10000 10000
    begin par
      begin seq
        gap
        lowfood
        gap
      end
      begin seq
        gap
        poisoned
        gap
      end
      hpbar_back
      hpbar
      spbar_back
      spbar
      grbar_back
      grbar
    end
    gap 0 10000 10000
  end
  playfield
end

vertical begin par
  begin seq
    gap 8
    begin par
      gauge_hp_back
      begin seq
        gap 3
        gauge_hp
        gap 3
      end
      gauge_sp_back
      begin seq
        gap 3
        gauge_sp
        gap 3
      end
      gauge_gp_back
      begin seq
        gap 3
        gauge_gp
        gap 3
      end
      gauge_fp_back
      begin seq
        gap 3
        gauge_fp
        gap 3
      end
      gauge_xp_back
      begin seq
        gap 3
        gauge_xp
        gap 3
      end
      button_help
      button_status
      button_inventory
      button_messages
      button_protections
      button_skills
      button_pickup
      button_setup
    end
    gap
  end
  begin seq
    gap 0 0
    begin par
      lowfood
      poisoned
    end
    begin par
      hpbar_back
      hpbar
    end
    begin par
      spbar_back
      spbar
    end
    begin par
      grbar_back
      grbar
    end
    gap 140
    gap 0 0
  end
  playfield 0 100
end
