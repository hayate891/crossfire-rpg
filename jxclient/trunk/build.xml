<?xml version="1.0"?>
<project name="jxclient" default="all" basedir=".">
    <property name="src.jxclient" value="src/jxclient"/>
    <property name="src.test" value="src/test"/>
    <property name="build" value="build"/>
    <target name="init">
        <mkdir dir="${build}"/>
    </target>
    <target name="compile" depends="init">
        <delete dir="${build}/jxclient"/>
        <mkdir dir="${build}/jxclient"/>
        <javac srcdir="${src.jxclient}" destdir="${build}/jxclient" source="1.5" debug="yes" fork="yes">
            <compilerarg value="-Xlint:unchecked"/>
        </javac>
    </target>
    <target name="jar" depends="compile,skin.prelude">
        <jar destfile="jxclient.jar">
            <fileset dir="${build}/jxclient"/>
            <fileset dir="." includes="resource/spells/*.png"/>
            <fileset dir="." includes="resource/unknown.png"/>
            <zipfileset src="jxcskin_prelude.jar"/>
            <manifest>
                <attribute name="Main-Class" value="com.realtime.crossfire.jxclient.jxclient"/>
            </manifest>
        </jar>
    </target>
    <target name="skin.prelude">
        <delete dir="${build}/skin.prelude/com/realtime/crossfire/jxclient/skins/default"/>
        <copy todir="${build}/skin.prelude/com/realtime/crossfire/jxclient/skins/default">
            <fileset dir="default.theme">
                <include name="*.skin"/>
                <include name="fonts/**"/>
                <include name="pictures/**"/>
            </fileset>
        </copy>
        <jar destfile="jxcskin_prelude.jar" basedir="${build}/skin.prelude"/>
    </target>
    <target name="clean">
        <delete dir="${build}" failonerror="false"/>
        <delete dir="default.theme/com" failonerror="false"/>
        <delete file="jxclient.jar" failonerror="false"/>
        <delete file="jxcskin_prelude.jar" failonerror="false"/>
    </target>
    <target name="all" depends="jar,skin.prelude">
    </target>
    <target name="check" depends="compile">
        <mkdir dir="${build}/reports"/>
        <mkdir dir="${build}/test"/>
        <javac srcdir="${src.test}" destdir="${build}/test" classpath="${build}/jxclient" debug="on" source="1.5"/>
        <junit fork="yes" haltonerror="yes" haltonfailure="yes">
            <jvmarg value="-ea"/>
            <classpath>
                <pathelement location="${build}/jxclient"/>
                <pathelement location="${build}/test"/>
            </classpath>
            <formatter type="brief"/>
            <batchtest fork="yes" todir="${build}/reports">
                <fileset dir="${src.test}" includes="**/*Test.java"/>
            </batchtest>
        </junit>
    </target>
</project>
